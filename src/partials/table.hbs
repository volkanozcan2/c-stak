<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">username</th>
                <th scope="col">email</th>
                <th scope="col">phone</th>
                <th scope="col">website</th>
            </tr>
        </thead>
        <tbody>
            {{#each arr}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{name}}</td>
                <td>{{username}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td>{{website}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>